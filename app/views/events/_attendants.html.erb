                          <span class="user_gender"><i class="fa fa-female" aria-hidden="true"></i> <%= "W" %></span>
                        <% end %>
                        <span class="divider">|</span>
                        <span class="user_age">Age:  <%= attendant.age %></span>
                      </div>
                    </div>
                  </div>
                  <div class="clear"></div>
                  <% if current_user.admin_pa_management_group %>
                  <div class="user_roles">
                    <span><i class="fa fa-user" aria-hidden="true"></i></span>
                    <span><%= truncate(attendant.category_role.name, length: 25) %></span>
