                        <div>
                          <span class="user_ref"><%= attendant.user.reference %></span>
                          <span class="divider">|</span>
                          <% if attendant.user.category_gender.name == "Male" %>
                            <span class="user_gender"><i class="fa fa-male" aria-hidden="true"></i> <%= "M" %></span>
