<p id="notice"><%= notice %></p>

<h1>Listing Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th>User</th>
      <th>Category blog</th>
      <th>Video link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= blog.image %></td>
        <td><%= blog.user_id %></td>
        <td><%= blog.category_blog_id %></td>
        <td><%= blog.video_link %></td>
        <td><%# link_to 'Show', user_blog(blog.user, blog) %></td>
        <td><%# link_to 'Edit', edit_user_blog_path(blog.user, blog) %></td>
        <td><%# link_to 'Destroy', userr_blog_path(blog.userr, blog), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

