<div class="blogs_section">
  <div class="medium-12 columns blogs_inner_section">

    <!-- search -->
    <div class="medium-12 columns search_container">
      <div class="search_inner_container">        
        <div>search content</div>
      </div>
    </div>
    <!-- search -->

    <!-- content -->
    <div class="medium-12 columns social_content_section">
      <div class="medium-12 columns content_container">
        <div class="content_details">
          <div class="blog_main_container">
            <ul>
              <!-- content -->
              <% @blogs.each do |blog| %>
                <li>
                  <div class="medium-6 columns left_content">
                    <div><%= link_to(image_tag("#{blog.image_url}", :alt =>  "image", :class =>"#"), user_blog_path(blog.user, blog)) %></div>
                  </div>
                  <div class="medium-6 columns right_content">
                    <div><%= link_to "#{blog.title}", user_blog_path(blog.user, blog) %></div>
                    <div>
                      <span><%= blog.category_blog.name %></span>
                      <span>|</span>
                      <span><%= blog.created_at %></span>
                    </div>
                    <div>
                      <span><%= link_to(image_tag("#{blog.user.image_url}", :alt =>  "image", :class =>"#"), user_path(blog.user)) %></span>
                      <span><%= link_to "#{blog.user.firstname}", user_path(blog.user) %></span>
                    </div>
                    <div><%= blog.content %></div>
                  </div>
                </li>
              <% end %>
              <!-- content -->
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- content -->

  </div>
</div>










<div class="old_content">
  <p id="notice"><%= notice %></p>
  <h1>Listing Blogs</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Image</th>
        <th>User</th>
        <th>Category blog</th>
        <th>Video link</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.title %></td>
          <td><%= blog.content %></td>
          <td><%= blog.image %></td>
          <td><%= blog.user_id %></td>
          <td><%= blog.category_blog_id %></td>
          <td><%= blog.video_link %></td>
          <td><%# link_to 'Show', user_blog(blog.user, blog) %></td>
          <td><%= link_to 'Edit', edit_user_blog_path(blog.user, blog) %></td>
          <td><%# link_to 'Destroy', userr_blog_path(blog.userr, blog), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Blog', new_blog_path %>
</div>
