<%= simple_form_for(@blog) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :image %>
    <%= f.input :user_id %>
    <%= f.input :category_blog_id %>
    <%= f.association :category_blog_id, collection: CategoryBlog.all, prompt: "select a category", label: "Blog Category" %>
    <%= f.input :video_link %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
