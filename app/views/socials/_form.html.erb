<%= simple_form_for [@user, @social] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: "Discussion Topic" %>
    <%= f.input :description, label: "About Social" %>
    <%= f.association :category_topic, collection: CategoryTopic.all, prompt: "select a category", label: "Social Category" %>
    <%= f.input :address %>
    <%= f.input :postcode %>

    <!-- hidden fields -->
    <%= f.hidden_field :latitude %>
    <%= f.hidden_field :longitude %>
    <%= f.hidden_field :user_id %>
    <!-- hidden fields -->
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
