<div class="album_photos_section">
  <div class="medium-12 columns album_photos_inner_section">

    <!-- content -->
      <div class="medium-12 columns album_photos_index_content_section">
        <div class="medium-12 columns content_container">
          <div class="content_details">
            <div class="album_photos_main_container">
              <ul>
                <!-- photos -->
                <% @album.photos.published_photos.order("created_at desc").each do |photo| %>
                  <li class="listed_photos">
                    <div class="polaroid_images">

                      <% if photo.photo_image_link.present? %>
                        <%= link_to(cl_image_tag(photo.photo_image_link, :transformation=>[{:gravity=>"face", :width => 600, :height => 320, :crop=>"fill"}]), "#") %>
                      <% else %>
                        <%= link_to(cl_image_tag(photo.image, :transformation=>[{:gravity=>"face", :width=>600, :height=>320, :crop=>"fill"}]), "#") %>
                      <% end %>

                    </div>
                  </li>
                <% end %>
                <!-- photos -->
              </ul>
            </div>
          </div>
        </div>
      </div>
    <!-- content -->

  </div>
</div>

