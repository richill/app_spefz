<div class="externalattendinglist_main_form">
  <%= simple_form_for [@event, @externalattendinglist] do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div>Attendants For the Event:</div>
      <div class="medium-12 columns listed_hosts">
        <b><%= @event.title %></b>
        <div class="medium-12 columns event_image_content">
          <ul class="medium-12 columns">
            <li class="host_left_content">
              <% if @event.image.present? %>
                <div class="image_cover"><%= link_to(cl_image_tag(@event.image, :transformation=>[{:gravity=>"center", :width=>200, :height=>110, :crop=>"fill"}]), event_path(@event)) %></div>
              <% else %>
                <div class="image_cover"><%= image_tag("img_feed_07.png") %></div>
              <% end %>
            </li>
            <li class="host_right_content">
              <div class="info"><i class="fa fa-map-marker" aria-hidden="true"></i> <%= @event.venuename %></div>
              <div class="info"><i class="fa fa-calendar" aria-hidden="true"></i> <%= @event.date.strftime("%A, %d %b") %></div>
              <div class="info"><i class="fa fa-clock-o" aria-hidden="true"></i> <%= @event.time.strftime("%H:%M") %>h - <%= @event.time_end.strftime("%H:%M") %>h</div>
              <div class="info city_country">
                <span><i class="fa fa-map-pin" aria-hidden="true"></i> <%= @event.city %>, <%= @event.category_country.name %></span>
              </div>
            </li>
          </ul>
        </div>
      </div>
      <div class="clear"></div>

      <div>Select Attendance:</div>
      <!-- search -->
      <div class="search_section hide">
        <% if current_user.admin_pa_management_group || current_user.pa_administration_group %>
          <div class="medium-12 columns search_container">
            <div class="search_inner_container"> 
              <%= search_form_for @search, url: edit_externalattendinglist_path(@event) do |f| %>       
              <ul class="search_fields_left">
                <li class="field select_gender"><%= f.select :category_gender_id_eq, options_from_collection_for_select(CategoryGender.all, "id", "name", @search.category_gender_id_eq), prompt: "Gender" %></li>
              </ul>   

              <ul class="search_fields_right">
                <li><%= f.submit 'search' %></li> 
                <li class="field btn_all">
                  <%= link_to edit_externalattendinglist_path(@event) do %>
                    <i class="fa fa-users" aria-hidden="true"></i>
                  <% end %>
                </li>
                <li class="field select_user_name"><%= f.text_field :firstname_or_lastname_or_reference_cont, placeholder: 'search firstname, lastname or Ref eg: kofi'%></li>
              </ul>        
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <!-- search -->
      <div class="medium-12 columns listed_hosts">
        <% if @event.category_quantitygender.name == "only men" %>
          <%= f.association :users, collection: User.all.males.order(:firstname), label_method: :user_info, label: false, as: :check_boxes %>
        <% elsif @event.category_quantitygender.name == "only women" %>
          <%= f.association :users, collection: User.all.females.order(:firstname), label_method: :user_info, label: false, as: :check_boxes %>
        <% else %>
          <%= f.association :users, collection: User.all.order(:firstname), label_method: :user_info, label: false, as: :check_boxes %>
        <% end %>
      </div>

      <!-- hidden_field -->
      <%= f.hidden_field :event, value: @event.id %>
      <!-- hidden_field -->

    </div>

    <div class="form-actions">
      <%= f.button :submit, "Submit External Attendance List" %>
    </div>
  <% end %>
</div>




