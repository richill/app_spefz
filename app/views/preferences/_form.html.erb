                              <ul>
                                <li><%= f.input :idealage_start, label: false, placeholder: "From"  %></li>
                                <li><%= f.input :idealage_end, label: false, placeholder: "To" %></li>
                              </ul>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="clear"></div>
                    </li>
                    <!-- section_age -->

                    
                  </ul>
                </section>
