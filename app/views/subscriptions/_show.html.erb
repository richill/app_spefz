<div class="medium-12 columns subscription_detail_info_section">
  <div class="pricing_detail_inner_container">
    <div class="pricing_detail_info_content">
      
      <!-- banner_content -->
      <div class="banner_img_cover">
        <div class="banner_text"> 
          <div>we are so confident you'll meet like minded people</div>
          <div>and share great times</div>
        </div>
      </div>
      <!-- banner_content -->

      <!-- upper_content -->
      <div class="upper_content">
        <div class="upper_content_pricing_info">
          <div class="pricing_title"><%= @subscription.title %> plan</div>
          <div class="pricing_subtitle">Get access to a pool of talented skilled individuals & start hiring today!</div>
          <div class="btn_container">
            <div class="btn_first"> <%= link_to "get current plan", new_payment_path(subcription_id: @subscription.id, user: current_user.id) %></div>
          </div>
        </div>
      </div>

      <!-- mid_content -->
      <div class="absolute_content"> 
        <div class="absolute_inner_content">
          <div class="absolute_content_pricing_info">


            <!-- subscription payment plan -->
            <div class="left_section">
              <div class="pricing_body left_inner_section">
                <div class="text first_content middle_upper_content" style="background-color: #283041;">
                  <span class="currency">$</span>
                  <span class="price">
                    <% if @subscription.price.blank? %>
                      <span><%= number_with_precision("0.00", precision: 0) %></span>
                    <% else %>
                      <span><%= number_with_precision(@subscription.price, precision: 0) %></span>
                    <% end %>
                    <div class="period">per month</div>
                  </span>
                </div>

                <div class="middle_middle_content">
                  <div class="text second_content">
                    <div><span class="figure"><%= "attend unlimited socials" %></span></div>
                  </div>
                  <div class="text second_content">
                    <div><span class="figure"><%= "host unlimited socials" %></span></div>
                  </div>
                  <div class="text second_content">
                    <div><span class="figure"><%= "unlimited messages" %></span></div>
                  </div>
                </div>

                <div class="text third_content middle_lower_content">
                  <%= link_to 'GET PLAN', new_payment_path(subcription_id: @subscription.id, user: current_user.id), target:"_blank" %>
                </div>
              </div>
            </div>
            <!-- subscription payment plan -->

            <!-- PAYMENT plan benifits -->
            <div class="benifit_content">
              <div class="medium-12 columns benifit_title"><%= @subscription.title %> benifits</div>
              <% if @subscription.title == "premium" %>
                <div class="premium_listed_benifits">
                  <ul>
                    <li><i class="fa fa-check"></i> PREMIUM offers a postage of <%# @subscription.adverts %> job adverts</li>
                    <li><i class="fa fa-check"></i> Access to a range of dashboard statistics</li>
                    <li><i class="fa fa-check"></i> Access to a range of hiring analytics</li>
                    <li><i class="fa fa-check"></i> View candidates application forms, profiles & resume</li>
                    <li><i class="fa fa-check"></i> Unlimited view and search through our CV database </li>
                  </ul>
                </div>
              <% end %>
              <%# if current_user.admin_pa_management_group || current_user.admin_client_group %>
              <%# if @userr.admin_pa_management_group && @userr.subscribed? || @userr.admin_client_group && @userr.subscribed? %>
                <div class="btn_third"><a href="#" data-reveal-id="myModal-userr-upgrade-plan-info"><%= "UPGRADE TO #{@subscription.title} PLAN NOW!" %></div>
                <div><%# render 'shared/modal_userr_upgrade_plan_info' %></div>
              <%# elsif @userr.admin_pa_management_group && !@userr.subscribed? || @userr.admin_client_group && !@userr.subscribed? %>
                <div class="btn_third"><%= link_to "GET #{@subscription.title} PLAN NOW!", new_payment_path(subcription_id: @subscription.id, user: current_user.id), target:"_blank" %></div>
              <%# else %>
                <div class="btn_third"><%= link_to "VIEW ALL PLAN", "#" %></div>
              <%# end %>
            </div>
            
          </div>
        </div>
      </div>
      
    </div>
  </div>
</div>













<div class="old_content">
  <p>
    <strong>Title:</strong>
    <%= @subscription.title %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @subscription.price %>
  </p>

  <%# link_to 'Edit', edit_subscription_path(@subscription) %>
  <%# link_to 'Back', subscriptions_path %>
</div>
