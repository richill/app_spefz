<div class="medium-12 columns subscription_detail_info_section">
  <div class="pricing_detail_inner_container">
    <div class="pricing_detail_info_content">
      
      <!-- banner_content -->
      <div class="banner_img_cover">
        <div class="banner_text"> 
          <div>we are so confident you'll meet like minded people</div>
          <div>and share great times!</div>
        </div>
      </div>
      <!-- banner_content -->

      <!-- upper_content -->
      <div class="upper_content">
        <div class="upper_content_pricing_info">
          <div class="pricing_title"><%= @subscription.title %> plan</div>
          <div class="pricing_subtitle">find lots of interesting socials, events & discussion and meet like minded people today!</div>
          <div class="btn_container">
            <div class="btn_first"> <%= link_to "get premium plan", new_payment_path(subcription_id: @subscription.id, user: current_user.id) %></div>
          </div>
        </div>
      </div>

      <!-- mid_content -->
      <div class="absolute_content"> 
        <div class="absolute_inner_content">
          <div class="absolute_content_pricing_info">


            <!-- subscription payment plan -->
            <div class="left_section">
              <div class="pricing_body left_inner_section">
                <div class="first_content middle_upper_content" style="background-color: #283041;">
                  <span class="currency">Â£</span>
                  <span class="price">
                    <% if @subscription.price.blank? %>
                      <span><%= number_with_precision("0.00", precision: 0) %></span>
                    <% else %>
                      <span><%= number_with_precision(@subscription.price, precision: 0) %></span>
                    <% end %>
                    <div class="period">per month</div>
                  </span>
                </div>

                <div class="middle_middle_content">
                  <div class="text second_content">
                    <div><span class="figure"><%= "attend unlimited socials" %></span></div>
                  </div>
                  <div class="text second_content">
                    <div><span class="figure"><%= "host unlimited socials" %></span></div>
                  </div>
                  <div class="text second_content">
                    <div><span class="figure"><%= "send unlimited messages" %></span></div>
                  </div>
                </div>

                <div class="text_bottom third_content middle_lower_content">
                  <%= link_to 'GET PLAN', new_payment_path(subcription_id: @subscription.id, user: current_user.id), target:"_blank" %>
                </div>
              </div>
            </div>
            <!-- subscription payment plan -->

            <!-- PAYMENT plan benifits -->
            <div class="benifit_content">
              <div class="medium-12 columns benifit_title"><%= @subscription.title %> member</div>
              <div class="premium_listed_benifits">
                <div class="clear"></div>
                <ul>
                  <li style="text-align:center;background-color:rgba(88, 205, 166, 0.2); padding:10px;">With our Premium plans you will get the most out of our spefz community. Attend and host socials, send messages, meet new people and much more.</li>
                  <li><i class="fa fa-check"></i> PREMIUM offers access to a range of free socials and events</li>
                  <li><i class="fa fa-check"></i> Be part of a fun friendly community - meet like minded people</li>
                  <li><i class="fa fa-check"></i> Access to a range of Exclusive Benefits</li>
                </ul>
              </div>
            </div>
            
          </div>
        </div>
      </div>
      
    </div>
  </div>
</div>












