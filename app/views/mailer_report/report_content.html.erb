<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Report Enquiry</title>
<style type="text/css">
@media(max-width:480px){
  table[class=main_table],table[class=layout_table]{width:300px !important;}
  table[class=layout_table] tbody tr td.header_image img{width:300px !important;height:auto !important;}
}
a{color:#37aadc}
</style>
</head>
<body>
<table border="0" cellpadding="0" cellspacing="0" width="100%">
<tbody>
<tr>
<td align="center" valign="top">
<!--  M A I N T A B L E  S T A R T  -->
<table border="0" cellpadding="0" cellspacing="0" class="main_table" width="600">
    <tbody>
    <tr>
    <td>
      <!--  L A Y O U T _ T A B L E  S T A R T  -->
    <table border="0" cellpadding="0" cellspacing="0" class="layout_table" style="border-collapse:collapse;border:1px solid #CCCCCC;" width="100%" >
      <tbody>
      <!--  H E A D E R R O W  S T A R T  -->
      <tr>
      <td align="left" class="header_image"><img height="120" src="https://res.cloudinary.com/africanjober/image/upload/v1484406305/Spefz_email_template_top_design_wpdgcj.png" width="600" style="border:0;display:block;"></td>
      </tr>
      <!--  H E A D E R R O W  E N D  -->
      <tr><td style="font-size:13px;line-height:13px;margin:0;padding:0;">&nbsp;</td></tr>
      <!--  B O D Y R O W  S T A R T  -->
      <tr>
      <td align="center" valign="top">
        <table align="center" border="0" cellpadding="0" cellspacing="0" width="85%">
          <tbody>
          <tr>
          <td align="left">
            
            <!-- report_user -->
            <% if @report.user %>
              <p style="font-family:Arial, Helvetica, sans-serif;font-size:14px;line-height:22px;font-weight:bold;">
                User Ref: <%= @report.user.reference %> 
              </p>
              <p style="font-family:Arial, Helvetica, sans-serif;font-size:14px;line-height:22px;text-transform:capitalize;font-weight:bold;">
                User Name: <%= link_to "#{@report.user.firtsname} #{@report.user.lastname}", user_url(@report.user) %>
              </p>
              <p style="font-family:Arial, Helvetica, sans-serif;font-size:14px;line-height:22px;text-transform:capitalize;font-weight:bold;">
                Type of Report: <%= @report.category_report.name %>
              </p>
              <div style="font-family:Arial, Helvetica, sans-serif;font-size:12px;text-transform:capitalize;background-color:#F9F9F9;padding:15px;">Info: Reporting User/User Content</div> <br/>

            <!-- report_social -->
            <% elsif @report.social %>
              <p style="font-family:Arial, Helvetica, sans-serif;font-size:14px;line-height:22px;font-weight:bold;">
                Social Ref: <%= @report.social.reference %> 
              </p>
              <p style="font-family:Arial, Helvetica, sans-serif;font-size:14px;line-height:22px;text-transform:capitalize;font-weight:bold;">
                Social Title: <%= link_to @report.social.title, social_url(@report.social) %>
              </p>
              <p style="font-family:Arial, Helvetica, sans-serif;font-size:14px;line-height:22px;text-transform:capitalize;font-weight:bold;">
                Type of Report: <%= @report.category_report.name %>
              </p>
              <div style="font-family:Arial, Helvetica, sans-serif;font-size:12px;text-transform:capitalize;background-color:#F9F9F9;padding:15px;">Info: Reporting Social Content</div> <br/>

            <!-- report_event -->
            <% elsif @report.event %>
              <p style="font-family:Arial, Helvetica, sans-serif;font-size:14px;line-height:22px;font-weight:bold;">
                Social Ref: <%= @report.event.reference %> 
              </p>
              <p style="font-family:Arial, Helvetica, sans-serif;font-size:14px;line-height:22px;text-transform:capitalize;font-weight:bold;">
                Social Title: <%= link_to @report.event.title, event_url(@report.event) %>
              </p>
              <p style="font-family:Arial, Helvetica, sans-serif;font-size:14px;line-height:22px;text-transform:capitalize;font-weight:bold;">
                Type of Report: <%= @report.category_report.name %>
              </p>
              <div style="font-family:Arial, Helvetica, sans-serif;font-size:12px;text-transform:capitalize;background-color:#F9F9F9;padding:15px;">Info: Reporting Event Content</div> <br/>
            <% end %>


            <div style="font-family:Arial, Helvetica, sans-serif;font-size:12px;background-color:#F9F9F9;padding:15px;">Reported by: <%= link_to "#{@report.reporter.firstname} #{@report.reporter.lastname}", user_url(@report.reporter) %> | Email: <%= link_to "#{@report.reporter.email}", user_url(@report.reporter) %> | Ref: <%= @report.reporter.reference %></div>
            
            <p style="font-family:Arial, Helvetica, sans-serif;font-size:14px;line-height:22px;background-color:#F9F9F9;padding:15px;">
              <%= @report.content %>
            </p>
            
            <p style="font-family:Arial, Helvetica, sans-serif;font-size:12px;line-height:22px;margin-top:20px;">
              <div style="font-family:Arial, Helvetica, sans-serif;font-size:12px;">Powered by,</div>
              <div style="font-family:Arial, Helvetica, sans-serif;font-size:12px;">The <a href="https://www.spefz.com/" style="font-family:Arial, Helvetica, sans-serif;color:#b6584f">Spefz.com</a> Team</div>
            </p>
          </td>
          </tr>
          </tbody>
        </table>
      </td>
      </tr>
      <!--  B O D Y R O W  E N D  -->
      <tr><td style="font-size:13px;line-height:13px;margin:0;padding:0;">&nbsp;</td></tr>
      <!--  F O O T E R R O W  S T A R T  -->
      <tr>
      <td align="left" class="header_image"><a href="https://www.spefz.com/"><img height="67" src="https://res.cloudinary.com/africanjober/image/upload/v1484406312/Spefz_email_template_bottom_design_p64tj3.png" width="600" style="border:0;display:block;" alt="Sent via Spefz"></a></td>
      </tr>
      <!--  F O O T E R R O W  E N D  -->
      </tbody>
    </table>
    <!--  L A Y O U T _ T A B L E  E N D  -->
    </td>
    </tr>
    </tbody>
</table>
<!--  M A I N _ T A B L E  E N D  -->
</td>
</tr>
</tbody>
</table>
</body>
</html>