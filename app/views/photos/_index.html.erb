<p id="notice" class="hide"><%= notice %></p>

<div class="photos_section">
  <div class="medium-12 columns photos_inner_section">

    <!-- content -->
      <div class="medium-12 columns photos_index_content_section">
        <div class="medium-12 columns content_container">
          <div class="outter_tree_link_container">
            <div class="tree_link">
              <span><i class="fa fa-image" aria-hidden="true"></i> <%= "photos #{[@photos.count]}" %></span>
            </div>
          </div>
          <div class="content_details">
            <div class="photos_main_container">
              <ul>
                <!-- photos -->
                <% @photos.published_photos.order("created_at desc").each do |photo| %>
                  <li class="listed_photos">
                    <div class="polaroid_images">
                      <a href="#<%= photo.id %>" data-reveal-id="<%= dom_id(photo) %>_photo_content_show_image" style=""><%= image_tag(photo.photo_image_link) %></a>
                      <%= render partial: 'shared/modal_photo_show_content', locals: { photo: photo } %>
                    </div>
                  </li>
                <% end %>
                <!-- photos -->
              </ul>
            </div>
          </div>
        </div>
      </div>
    <!-- content -->

  </div>
</div>







<div class="hide">
  <h1>Listing Photos</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Image</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @photos.each do |photo| %>
        <tr>
          <td><%= photo.name %></td>
          <td><%= photo.description %></td>
          <td><%= photo.image %></td>
          <td><%= link_to 'Show', photo %></td>
          <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
          <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Photo', new_photo_path %>
</div>