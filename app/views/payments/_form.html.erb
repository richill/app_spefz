<div class="paymentsform_main_section">
  <% if @subscription_id.present? %>
    <!-- payment_form_subscription -->
    <div class="payment_subscription_form">
      <div class="upper_section">
        <div class="header"><%= @subscription.title %> subscription plan | <%= @subscription.id %></div>
      </div>

      <div class="lower_section">
        <%= simple_form_for(@payment) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :user_id %>
            <%= f.input :email, placeholder: "#{current_user.email}" %>
            <%= f.input :subscription_id, value: @subscription_id %>
            <%= f.input :reference %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Subscribe" %>
          </div>
        <% end %>
      </div>
    </div>
    <!-- payment_form_subscription -->




  <% elsif @event_id.present? %>
    <!-- payment_form_event -->
    <div class="payment_event_form">
      <div class="upper_section">
        <div class="header"><%= @event.title %> | <%= @event.id %></div>
        <div class="payment_table">
          <table style="border: 1px solid #2F3F5B; border-collapse: collapse;">
            <thead style="border: 1px solid #2F3F5B;">
              <tr>
                <th>plan</th>
                <th>description</th>
                <th>tickets</th>
                <th>(Â£)</th>
              </tr>
            </thead>
            <tbody>
              <tr class="payment_details">
                <td><%= @event.title %> plan</td>
                <td>
                  <div><i class="fa fa-angle-double-right" aria-hidden="true"></i> <%# @product.adverts %> job ads</div>
                  <div><i class="fa fa-angle-double-right" aria-hidden="true"></i> <%# @product.cvs %>unlimited cv database search</div>
                </td>
                <td>1</td>
                <td>$<%= @event.price %></td>
              </tr>
              <tr>
                <td class="payment_vat">total VAT (inclusive)</td>
                <td></td>
                <td></td>
                <td>$<%= @event.price %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="lower_section">
        <%= simple_form_for(@payment) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :user_id %>
            <%= f.input :email, placeholder: "#{current_user.email}" %>
            <%= f.input :event_id, value: @event_id %>
            <%= f.input :reference %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Book Securely" %>
          </div>
        <% end %>
      </div>
    </div>
    <!-- payment_form_event -->
  <% end %>

  <!-- payment_form_paypal -->
  <!-- payment_form_paypal -->
</div>



