<%= simple_form_for(@payment) do |f| %>
  <%= f.error_notification %>

  <%= @subcription_id %>
  <%= @event.title %>
  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :user_id %>
    <%= f.input :subscription_id %>
    <%= f.input :reference %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>



