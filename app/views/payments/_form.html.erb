<%= simple_form_for(@payment) do |f| %>
  <%= f.error_notification %>

  <% if @subscription.present? %>
    <div>ID: <%= @subscription.id %> | <%= @subscription.title %> plan</div>
  <% elsif @event.present? %>
    <div>ID: <%= @event.id %> | <%= @event.title %></div>
  <% end %>
  
  
  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :user_id %>
    <%= f.input :subscription_id %>
    <%= f.input :reference %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
