<div class= "medium-12 columns user_general_settings_section user_main_dashboard_page">

  <!-- left_column_section -->
  <div class="medium-2 columns left_column_section">
    <%= render 'shared/content_user_adminpanel_left_column' %>
  </div>
  <!-- left_column_section -->


  <!-- right_column_section -->
  <div class="medium-10 columns right_column_section">
    <div class="right_inner_section">
      <!-- content -->
      <div class="tree_link">
        <span><i class="fa fa-user" aria-hidden="true"></i> <%= link_to "#{current_user.firstname}", user_path(current_user)%></span> <span class="fwd_sign">></span> <span><%= link_to "events", stats_events_user_path(current_user) %></span> <span class="fwd_sign">></span> <span><%= link_to "venues", venues_path %></span> <span class="fwd_sign">></span> <span>create venue</span>
      </div>
      <div class="user_general_settings_inner_section venue_edit_update_form">
        <%= simple_form_for(@venue) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.file_field :image %>
            <%= f.input :venuename %>
            <%= f.input :website %>
            <%= f.input :address %>
            <%= f.input :postcode %>
            <div class="clear"></div>
            <div class="address_lower">
              <%= f.association :category_country, collection: CategoryCountry.all, prompt: "select a country", placeholder: "Select Country" %>
              <%= f.input :city, placeholder: "city" %>
            </div>
            <div class="clear"></div>
            <%= f.input :maplink %>
            <%= f.input :station, label: "Closet Station" %>
            <%= f.input :price, label: "Price (Â£)" %>
            <%= f.input :min_capacity %>
            <div class="clear"></div>
            <div class="event_manager_details">
              <%= f.input :eventmanager, label: "Event Manager", placeholder: "Dr. Nelson Larbi" %>
              <%= f.input :contact, label: "Contact", placeholder: "0208-958-7999" %>
              <div class="clear"></div>
              <div class="text_info">If you would like to have a speaker present at the social, kindly write in the full name of the speaker and place in the linked in web address of the speaker. We highly recommend socials to have speakers present, this enables active conversation set around the topic of the event, and attracts more attendees to the event. </div>
            </div>
            <div class="clear"></div>
          </div>

          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
      </div>
      <!-- content -->
    </div>
  </div>
  <!-- right_column_section -->
</div>
