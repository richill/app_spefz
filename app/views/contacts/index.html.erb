<h1>Listing Contacts</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Message</th>
      <th>Type of Client</th>
      <th>Type of Enquiry</th>
      <th>Tel</th>
      <th>Reference</th>
      <th>Status</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.firstname %></td>
        <td><%= contact.lastname %></td>
        <td><%= contact.email %></td>
        <td><%= contact.message %></td>
        <td><%= contact.category_contactclient.name %></td>
        <td><%= contact.category_enquiry.name %></td>
        <td><%= contact.tel %></td>
        <td><%= contact.reference %></td>
        <td><%= contact.status %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

