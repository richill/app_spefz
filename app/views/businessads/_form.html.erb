<%= simple_form_for [@user, @businessad] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :content %>
    <%= f.input :link %>
    <%= f.input :image %>
    <%= f.input :displaytext %>
    <%= f.input :category_advert_id %>
    <%= f.input :event_id %>
    <%= f.input :user_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
