<%= simple_form_for(@host) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :users, collection: User.all.order(:firstname), label_method: :firstname, as: :check_boxes %>
    <%= f.association :event, collection: Event.all.order(:title), prompt: "please select your event", label_method: :title, label: 'Event' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
