<%= simple_form_for(@host) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div>Select Host:</div>
    <div class="medium-12 columns listed_hosts">
      <%= f.association :users, collection: User.hosts.all.order(:firstname), label_method: :firstname, label: false, as: :check_boxes %><br/>
    </div>
    <div class="clear"></div>
    <%= f.association :event, collection: Event.live_events.all.order(:title), prompt: "please select your event", label_method: :title, label: 'Event', :value => @event.title, :selected => @event_id %>
    <%# f.association :category_country, collection: CategoryCountry.all, prompt: "select a category", label: "current country (you currently live in)", :value => current_user.category_country.name, :selected => current_user.category_country_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create Hosts" %>
  </div>
<% end %>
