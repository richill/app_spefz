<%= simple_form_for(@signup) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: false, placeholder: "name" %>
    <%= f.input :email, label: false, placeholder: "email address" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
