<%= simple_form_for(@management) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%# f.input :date, input_html: { value: @management.event.date } %>
    <%= f.input :date %>
    <%= f.association :event, collection: Event.all, prompt: "select an event", label: "Event" %>
    <%= f.input :monthyear %>
    <%= f.input :week %>
    <%= f.input :venuecost %>
    <%= f.input :hostcost %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
