<div class="report_modal_container">
  <div id="<%= dom_id(event) %>_report" class="reveal-modal report_modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
    <h2 id="myModal-report-header">Report this event | <%= truncate "#{event.title}", length: 40 %></h2> 
    <div class="content_info"><%= render partial: "reports/form_event", locals: { event: event } %></div>
    <a class="close-reveal-modal cancel_button" aria-label="Close">&#215;</a>
  </div>
</div> 