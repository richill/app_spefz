<div id="myModal-users-followings" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
  <div class="userfollowings_inner_container">
    <div class="header">Following [<%= @user.followings.count %>]</div>
    <div class="content_list">
      <ul>
        <% @user.active_relationships.each do |user| %>
          <li>
            <span class="img_cover">
              <% if user.followed.image_url.present? %>
                <%= link_to(image_tag(user.followed.image_url, :alt =>  "image", :class =>"#", id: ""), user_path(user.followed)) %>
              <% else %>
                <%= link_to(image_tag("img-profile-image-default.png", :alt =>  "image", :class =>"#", id: ""), user_path(user.followed)) %>
              <% end %>
            </span>
            <span class="follower_following_name"><%= link_to "#{user.followed.firstname} #{user.followed.lastname}", user_path(user.followed) %></span>
            <span class="follow_unfollow_form btn"><%= link_to "unfollow", user, method: :delete, html: { method: :delete }, remote: true %></span>
          </li>
        <% end %>
      </ul>
    </div> 
    <a class="close-reveal-modal cancel_button" aria-label="Close">&#215;</a>
  </div>
</div>


