<div class="medium-12 columns image_restriction_page_section">
  <div class="error_inner_container">
    <div class="error_content_section">
      <h2 class="header">Access Restricted</h2>
      <div class="subtitle">You must have a profile image in order to proceed</div>
      <div class="error_content_inner_section">
        <h1>Oops!</h1>
        <div><i class="fa fa-user-times" aria-hidden="true"></i></div>
        <h2>Hi <%= current_user.firstname %>! you must have a profile picture to proceed</h2>
        <div class="sub_content"></div>
        <div class="error_btn">
          <div><%= link_to "Update Profile", edit_user_path(current_user) %></div>
        </div>
      </div>
    </div>
  </div>
</div>
