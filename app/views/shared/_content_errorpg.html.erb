<div class="medium-12 columns error_page_section">
  <div class="error_inner_container">
    <div class="error_content_section">
      <h2 class="header">Error</h2>
      <div class="subtitle">It appears there has been an internal error with the page you've requested</div>
      <div class="error_content_inner_section">
        <h1>Oops! </h1>
        <div><i class="fa fa-users"></i></div>
        <h2>Sorry something went wrong</h2>
        <div class="sub_content">we've recorded the faults and are working hard to fix it</div>
        <div class="error_btn">
          <% if signed_in? %>
            <div class="btn_first"><%= link_to 'view socials', socials_path %></div>
            <div class="btn_second"><%= link_to 'view speed-events', events_path %></div>
          <% else %>
            <div class="btn_first"><%= link_to 'sign-up', new_user_registration_path %></div>
            <div class="btn_second"><%= link_to 'sign-in', signin_path %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>