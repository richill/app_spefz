<div class="comments_inner_section">
  <div class="user_comment">
    <ul>
    <% @comments.each do |comment| %>
      <li>
        <div class="medium-1 columns image_name_container">
          <div class="image"><%= link_to (image_tag(comment.user.image_url)), user_path(comment.user) %></div>
          <div class="name"><%= link_to comment.user.firstname, user_path(comment.user) %></div>
        </div>
        <div class="medium-11 columns comment_content_container">
          <div class="comment"><%= comment.content %></div>
          <div class="time">Posted: <%= time_ago_in_words(comment.created_at) %> ago</div>
        </div>
        <div class="clear"></div>
      </li>
      <div class="clear"></div>
    <% end %>
    </ul>
  </div>
</div>