<div class="left_inner_section">
  <ul>
    <li>
      <div class="list_options">
        <%= link_to edit_user_path(current_user), :class => is_active?("edit") do %>
        <span><i class="fa fa-user" aria-hidden="true"></i></span>
        <span class="option_header">Edit profile</span>
        <% end %>
      </div>
    </li>
    <% if current_user.subscribed_access? %>
    <li>
      <div class="list_options">
        <%= link_to new_user_social_path(current_user), :class => is_active?("social/new") do %>
        <span><i class="fa fa-calendar-plus-o" aria-hidden="true"></i></span>
        <span class="option_header">create social</span>
        <% end %>
      </div>
    </li>
    <% end %>

    <% if User.platform_sufficient_users %>
      <% if current_user.preference.present? %>
      <li>
        <div class="list_options">
          <% if current_user.preference.id? %>
            <%= link_to user_preference_path(current_user, current_user.preference), :class => is_active?("preferences/show") do %>
            <span><i class="fa fa-heartbeat" aria-hidden="true"></i></span>
            <span class="option_header">my preference</span>
            <% end %>
          <% else %>
            <%= link_to new_user_preference_path(current_user), :class => is_active?("preferences/new") do %>
            <span><i class="fa fa-heartbeat" aria-hidden="true"></i></span>
            <span class="option_header">create preference</span>
            <% end %>
          <% end %>
        </div>
      </li>
      <% else %>
      <li>
        <div class="list_options hide">
          <%= link_to new_user_preference_path(current_user), :class => is_active?("preferences/new") do %>
          <span><i class="fa fa-heartbeat" aria-hidden="true"></i></span>
          <span class="option_header">create preference</span>
          <% end %>
        </div>
      </li>
      <% end %>
    <% end %>


    <li>
      <div class="list_options">
        <%= link_to membership_user_path(current_user), :class => is_active?("membership") do %>
          <% if current_user.subscribed? %>
            <span><i class="fa fa-trophy" aria-hidden="true"></i></span>
          <% else %>
            <span><i class="fa fa-certificate" aria-hidden="true"></i></span>
          <% end %>
          <span class="option_header">membership</span>
        <% end %>
      </div>
    </li>
    <li>
      <div class="list_options">
        <%= link_to account_user_path(current_user), :class => is_active?("account") do %>
          <span><i class="fa fa-credit-card" aria-hidden="true"></i></span>
          <span class="option_header">account</span>
        <% end %>
      </div>
    </li>
    <li>
      <div class="list_options">
        <%= link_to settings_user_path(current_user), :class => is_active?("settings") do %>
          <span><i class="fa fa-cogs" aria-hidden="true"></i></span>
          <span class="option_header">settings</span>
        <% end %>
      </div>
    </li>
  </ul>
</div>