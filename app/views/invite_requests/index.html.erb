<p id="notice"><%= notice %></p>

<h1>Listing Invite Requests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Inviter</th>
      <th>Social</th>
      <th>Event</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invite_requests.each do |invite_request| %>
      <tr>
        <td><%= invite_request.user_id %></td>
        <td><%= invite_request.inviter_id %></td>
        <td><%= invite_request.social_id %></td>
        <td><%= invite_request.event_id %></td>
        <td><%= invite_request.status %></td>
        <td><%= link_to 'Show', invite_request %></td>
        <td><%= link_to 'Edit', edit_invite_request_path(invite_request) %></td>
        <td><%= link_to 'Destroy', invite_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

