<%= simple_form_for(@invite_request) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="invite_message">Hi <span class="invitation_names"><%= "#{user.firstname}!" %></span> send an invite request to the event organiser to be invited to the social <span class="social_event_names"><%= "#{@social.title}" %></span></div>
    
    <!-- hidden_field -->
    <%= f.hidden_field :user_id, value: user.id, label:"user" %>
    <%= f.hidden_field :inviter_id, value: @social.user.id, label:"inviter" %>
    <%= f.hidden_field :social_id, value: @social.id, label:"social" %>
    <!-- hidden_field -->
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send Request" %>
  </div>
<% end %>
