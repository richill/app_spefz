<!-- =========================================
       display details of conversation within message [from inbox | sent & trash] betweeen reciever & sender
     ========================================= -->

<div class="medium-12 columns messages_page_section">
  <div class="messages_inner_container">


    <!-- upper_section: listed actions -->
    <div class="medium-12 columns upper_section">
      <div class="listed_actions_container">
        <div class="listed_actions_inner_container"> 
          <span>
            <%= link_to message_trash_path do %>
              <span class="label label-danger pull-right"><%= trashed_messages_count %></span>
              <em class="fa fa-trash-o fa-lg"></em>
              <span>Trash</span>
            <% end %>
          </span> |
          <span>
            <%= link_to message_inbox_path do  %>
              <span class="label label-danger pull-right"><%= unread_messages_count %></span>
              <em class="fa fa-inbox fa-lg"></em>
              <span>Inbox</span>
            <% end %>
          </span> |
          <span>
            <%= link_to message_sent_path do %>
              <span class="label label-danger pull-right"><%= sent_messages_count %></span>
              <em class="fa fa-paper-plane-o fa-lg"></em>
              <span>Sent</span>
            <% end %>
          </span> |
          <span><%= link_to "Compose", new_conversation_path, class: "btn btn-success" %></span>
        </div>
      </div>
    </div>
    <!-- upper_section: listed actions -->



    <div><%# render 'messages/folders' %></div>



    <!-- lower_section: conversations -->
    <div class="medium-12 columns lower_section">
      <div class="listed_conversations_container">
        <div class="listed_conversations_inner_container">
          <!-- Previous conversations -->
          <div><%= render partial: 'messages' %></div>
          <!-- Reply Form -->
          <div class="message_reply_form_section">
            <%= simple_form_for :messages, url: reply_conversation_path(conversation) do |f| %>
              <%= f.text_area :body, placeholder: "Reply Message", rows: 4, class: "form-control" %>
              <%= f.button :submit, "Reply", class: 'message_reply_submit_btn' %>
            <% end %>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
    <!-- lower_section: conversations -->



  </div>
</div>
