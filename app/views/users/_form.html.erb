<div class= "medium-12 columns user_form_page_section">
  <div><%# render 'shared/content_user_left_column' %></div>

  <!-- left_column_section -->
  <div class="medium-2 columns left_column_section">
    <div class="left_inner_section">
      <ul>
        <li>
          <div class="list_options active">
            <%= link_to edit_user_path(current_user) do %>
            <span><i class="fa fa-user" aria-hidden="true"></i></span>
            <span class="option_header">Edit profile</span>
            <% end %>
          </div>
        </li>
        <li>
          <div class="list_options">
            <%= link_to "#" do %>
              <% if current_user.subscribed_access? %>
                <span><i class="fa fa-trophy" aria-hidden="true"></i></span>
              <% else %>
                <span><i class="fa fa-certificate" aria-hidden="true"></i></span>
              <% end %>
              <span class="option_header">membership</span>
            <% end %>
          </div>
        </li>
        <li>
          <div class="list_options">
            <%= link_to "#" do %>
              <span><i class="fa fa-credit-card" aria-hidden="true"></i></span>
              <span class="option_header">account</span>
            <% end %>
          </div>
        </li>
        <li>
          <div class="list_options">
            <%= link_to "#" do %>
              <span><i class="fa fa-cogs" aria-hidden="true"></i></span>
              <span class="option_header">settings</span>
            <% end %>
          </div>
        </li>
      </ul>
    </div>
  </div>
  <!-- left_column_section -->



  <!-- right_column_section -->
  <div class="medium-10 columns right_column_section">
    <%= simple_form_for(@user) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.file_field :image %>
        <%= f.input :firstname %>
        <%= f.input :lastname %>
        <%= f.input :profession %>
        <%= f.text_field :tag_list, value: @user.tag_list.to_s, placeholder: "chess, jogging, dogs, skipping, gym, startups, entreprenuers, jazz..." %>
        <%= f.association :category_gender, collection: CategoryGender.all, prompt: "select a category", label: "Gender" %>
        <%= f.input :description %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>
<!-- right_column_section -->
