<div class="users_registrations_new_section">

  <div class="medium-12 columns users_inner_registrations_new_section upper_section">
    <div class="banner_inner_section">
      <!-- header -->
      <div class="header_section">
        <div class="logo_links_section">
          <span class="logo"><%= link_to(image_tag("img_spefz_logo.png", :alt =>  "alt text", :class =>"#"), root_path) %></span>
          <span class="links">
            <ul>
              <li><%= link_to "Sign in", user_session_path %></li>
              <li><%= link_to "How it works", ".howitworksheader", rel: "relativeanchor" %></li>
              <li><%= link_to "About us", ".aboutusheader", rel: "relativeanchor" %></li>
            </ul>
          </span>
        </div>
      </div>

      <!-- banner content -->
      <div class="signup_content signupheader">

        <div class="signup_inner_content">
          <div class="signup_inner_upper_content">We use cookies. If you use our website, we shall assume that you are happy with the use of cookies as described in our privacy policy.</div>
          <div class="signup_inner_middle_content">
            <h1>WelcomeTo Spefz</h1>
            <div class="sub_header">Discover the most interesting socials and events happening around you.</div>
            <div>
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= f.error_notification %>
                <div class="form-inputs">
                  <%= f.input :firstname %>
                  <%= f.input :lastname %>
                  <%= f.date_field :birthdate %>
                  <%= f.input :email, required: true, autofocus: true %>
                  <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                  <%= f.input :password_confirmation, required: true %>
                  <%= f.association :category_gender, collection: CategoryGender.all, required: true, prompt: "please choose", label: 'Gender' %>
                </div>
                <div class="form-actions">
                  <%= f.button :submit, "Sign up" %>
                </div>
              <% end %>
              <%= render "users/shared/links" %>
            </div>
          </div>
          <div class="signup_inner_bottom_content">We use cookies. If you use our website, we shall assume that you are happy with the use of cookies as described in our privacy policy.</div>
        </div>


      </div>


    </div>
  </div>

  <div class="medium-12 columns lower_section">
    <div class="medium-12 columns background_dark">
      <div class="header_section">
        <div class="header">find out more about us</div>
        <div class="sub_header">we like to keep our members up to date via social media</div>
      </div>
      <div class="medium-12 columns content_details">
        <div class="social_media">
          <%= link_to '', 'https://www.facebook.com/Spefz-258495281186318/', class: "fa fa-facebook-square", target:"_blank" %>
          <%= link_to '', 'https://twitter.com/spefz', class: "fa fa-twitter-square", target:"_blank" %>
          <% link_to '', 'https://www.instagram.com/spefz/', class: "fa fa-linkedin-square", target:"_blank" %>
          <%= link_to '', 'https://www.instagram.com/spefz/', class: "fa fa-instagram", target:"_blank" %>
        </div>
        <div class="footer_links">
          <ul class="inline-list">
            <li><%= link_to "about us", ".aboutusheader", rel: "relativeanchor" %></li>
            <li><%= link_to "how it works", ".howitworksheader", rel: "relativeanchor" %></li>
            <li><%= link_to "signup", new_user_registration_path %></li>
            <li><%= link_to "we are hiring!", "https://angel.co/spefz/jobs?utm_source=startup_profile_header", target: "_blank" %></li>
            <li>
              <a href="#" data-reveal-id="myModal-contactus">contact us</a>
              <div><%= render 'shared/modal_contactus' %></div>
            </li>
          </ul>
        </div>
        <div class="copyright_content">Copyright Â© 2016 Spefz App | ARTLoe Technologies Ltd</div>
      </div>
    </div>
  </div>



</div>
