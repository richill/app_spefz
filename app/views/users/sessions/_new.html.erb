                    <span class="eventupcoming_text">coming soon</span>
                  </div>
                <% end %>
                <div class="medium-12 columns image_content_info">
                  <!-- sold out -->
                  <% if event.sold_out? || event.soldout? || event.soldout_men? && event.soldout_women? %>
                    <div class="banner">
