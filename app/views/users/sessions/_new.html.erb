<div class="users_sessions_new_section">
  <div class="medium-12 columns banner_singedout_section upper_section">
    <div class="banner_inner_section">
      <!-- header -->
      <div class="header_section">
        <div class="logo_links_section">
          <span class="logo"><%= link_to(image_tag("img_spefz_logo.png", :alt =>  "alt text", :class =>"#"), root_path) %></span>
          <span class="links">
            <ul>
              <li><%= link_to "Sign up", new_user_registration_path %></li>
              <li><%= link_to "How it works", ".howitworksheader", rel: "relativeanchor" %></li>
              <li><%= link_to "About us", ".aboutusheader", rel: "relativeanchor" %></li>
            </ul>
          </span>
        </div>
      </div>

      <!-- banner content -->
      <div class="banner_content signupheader">
        <h1>Meet New People, Enjoy Your City</h1>
        <div class="sub_header">Welcome! Discover the most interesting socials & discussions happening around you.</div>
        <div class="signup_container">
          <div>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, required: false, autofocus: true, placeholder: "Email", label: false %>
                <%= f.input :password, required: false, placeholder: "Password", label: false %>
                <%# f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="form-actions">
                <%= f.button :submit, "Sign in" %>
              </div>
            <% end %>
          </div>
          <div class="signup_inner_upper_content">We use <%= link_to "cookies", terms_cookie_policy_path %>. If you use our website, we shall assume that you are happy with the use of cookies as described in our <%= link_to "privacy policy", terms_privacy_path %>.</div>
