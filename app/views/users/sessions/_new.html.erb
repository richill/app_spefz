                        <div class="btn_soldout"><%= link_to "sold out!", preview_event_path(event) %></div>
                      <% else %>
                        <div class="btn_booknow"><%= link_to "book now!", preview_event_path(event) %></div>
                      <% end %>
                    </div>
                  </div>
                  <!-- right_evt content -->
                </div>
              </div>
              <div class="clear"></div>
            </li>
            <% end %>
            <!-- events -->
          </ul>
        </div>
      </div>
    </div>
  </div>
