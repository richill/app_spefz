                    <ul>
                      <!-- comments -->
                      <% social.comments.limit(2).each do |comment| %>
                      <li>
                        <ul class="inline-list feed_inner_comment_section">
                          <li class="medium-2 columns feed_comment_img"><%= link_to(cl_image_tag(comment.user.image, :transformation=>[{:gravity=>"face", :width=>200, :height=>200, :crop=>"fill"}]), social_path(social)) %></li>
                          <li class="medium-10 columns feed_comment"><span><b><%= link_to "#{comment.user.firstname}", "#" %></b> <%= truncate("#{comment.content}", length: 90) %></span></li>
                        </ul>
                      </li>
                      <% end %>
                      <!-- comments -->
                    </ul>
                  </div>
                <% end %>
                <div class="booking">
                  <div><%= link_to "attend", "#" %></div>
                </div>
              </div>
            </li>
            <% end %>
            <!-- socials -->
          </ul>
        </div>
      </div>
    </div>
  </div>
