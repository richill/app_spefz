<div class="user_dashboard_admin_overview hide">
  <h1>dashboard</h1>
  <div>
    <ul>
      <li>total of registered users</li>
      <li>total of subscribed users</li>
      <li>total of scoials</li>
      <li>total of active/live scoials</li>
      <li>total of events</li>
      <li>total of active/live events</li>
    </ul>
  </div>
</div>

<div class="userr_dashboard_content">
  <!-- upper_data_content -->
  <div class="medium-12 columns upper_data_content">
    <div class="medium-2 columns left_data responsive_data">
      <div class="data_content">
        <div class="header"> total registered users</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-list"></i></span><span>100</span></div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data">
      <div class="data_content">
        <div class="header"> total subscribed users</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-list"></i></span><span>30</span></div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data">
      <div class="data_content">
        <div class="header"> total socials</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-file-text"></i></span><span>40</span></div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data">
      <div class="data_content">
        <div class="header"> total active socials</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-male"></i></span><span>20</span></div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data">
      <div class="data_content">
        <div class="header"> total events</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-female"></i></span><span>38</span></div>
      </div>
    </div>
    <div class="medium-2 columns right_data responsive_data">
      <div class="data_content">
        <div class="header"> total active events</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-user-plus"></i></span><span>45</span></div>
      </div>
    </div>
  </div>
  <div class="clear"></div>

  <!-- data_graph_content -->
  <!-- <div class="medium-12 columns data_graph_content">
    <div class="data_graph_cover">graph_01</div>
  </div>
  <div class="clear"></div> -->

  <!-- lower_data_content -->
  <div class="medium-12 columns lower_data_content">
    <div class="medium-12 columns bottom_data_content">
      <%# render 'shared/content_userrs_application_status' %>
    </div>
  </div>

 <!-- middle_data_content -->
  <%# if @applications.applicant_pending.where(advert: @adverts.open_adverts.active_adverts).count > 0 || @invites.count > 0 %>
    <div class="medium-12 columns middle_data_content">
      <div class="medium-12 columns middle_data_header">
        <div class="middle_data_header_inner">
          <div class="middle_data_header_main">Pending Applicants [<%# @userr.forms.applicant_pending.open_ad_applications.active_ad_applications.count %>]</div>
          <div class="middle_data_header_subtitle"><i class="fa fa-info-circle"></i> applicants & invitees linked to job adverts that have been expired or have been closed are not displayed</div>
        </div>
      </div>
      <div class="medium-7 columns left_data_content">
        <%# render 'shared/content_userrs_recruiters_applicants' %>
      </div>
      <div class="medium-5 columns right_data_content">
        <%# render 'shared/content_userrs_sent_invites' %>
      </div>
    </div>
  <%# end %>
  <div class="clear"></div>

  <!-- lower_data_content -->
  <div class="medium-12 columns lower_data_content">
    <div class="medium-12 columns bottom_data_content">
      <%# render 'shared/content_userrs_created_adverts' %>
    </div>
  </div>

  <!-- lower_bottom_data_content -->
  <div class="medium-12 columns lower_data_content">
    <div class="medium-12 columns lower_bottom_data_content">
      <%# render 'shared/content_userrs_company_adverts' %>
    </div>
  </div>

  <!-- lower_bottom_data_content -->
  <div class="medium-12 columns lower_data_content">
    <div class="medium-12 columns lower_bottom_data_content">
      <%# render 'shared/content_userrs_favourites' %>
    </div>
  </div>

  <div class="clear"></div>
</div>

