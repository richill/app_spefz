<div class="user_dashboard_admin_statsalbums">
  <!-- upper_data_content -->
  <div class="medium-12 columns upper_data_content">
    <div class="medium-4 columns left_data responsive_data stats_tab_01">
      <div class="data_content">
        <div class="header"> total albums</div>
        <div class="header_data">
          <span class="header_icon"><i class="fa fa-camera" aria-hidden="true"></i></span>
          <span><%= @albums.count %></span>
        </div>
      </div>
    </div>
    <div class="medium-4 columns middle_data responsive_data stats_tab_02">
      <div class="data_content">
        <div class="header"> total published albums</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-camera" aria-hidden="true"></i></span>
          <span><%= @albums.published_albums.count %></span>
        </div>
      </div>
    </div>
    <div class="medium-4 columns middle_data responsive_data stats_tab_03">
      <div class="data_content">
        <div class="header"> total unpublished albums</div>
        <div class="header_data">
          <span class="header_icon"><i class="fa fa-camera" aria-hidden="true"></i></span>
          <span><%= @albums.unpublished_albums.count %></span>
        </div>
      </div>
    </div>
  </div>


  <div class="clear"></div>

  <!-- table_data_content -->
  <div class="medium-12 columns lower_data_content stats_tab_01_content">
    <div class="medium-12 columns lower_data_inner_content">
      <%= render 'users/shared/data_info_statsalbums_albums' %>
    </div>
  </div>

  <div class="medium-12 columns lower_data_content stats_tab_02_content hide">
    <div class="medium-12 columns lower_data_inner_content">
      <%# render 'users/shared/data_info_statsalbums_publishedalbums' %>
    </div>
  </div>

  <div class="medium-12 columns lower_data_content stats_tab_03_content hide">
    <div class="medium-12 columns lower_data_inner_content">
      <%# render 'users/shared/data_info_statsalbums_unpublishedalbums' %>
    </div>
  </div>
  <div class="clear"></div>
</div>

