<div class="user_dashboard_admin_statsadverts">
  <!-- upper_data_content -->
  <div class="medium-12 columns upper_data_content">
    <div class="medium-2 columns left_data responsive_data stats_tab_01">
      <div class="data_content">
        <div class="header"> total adverts</div>
        <div class="header_data">
          <span class="header_icon"><i class="fa fa-newspaper-o" aria-hidden="true"></i></span>
          <span><%= @businessads.all.count %></span>
          <div class="minor_info">£<%= number_with_precision(@businessads.live_this_year.total_price, precision: 0) %> [<%= Date.current.strftime("%Y") %>]</div>
        </div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data stats_tab_02">
      <div class="data_content">
        <div class="header"> total live adverts</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-newspaper-o" aria-hidden="true"></i></span>
          <span><%= @businessads.live_adverts.open_adverts.count %></span>
          <div class="minor_info">£<%= number_with_precision(@businessads.live_adverts.open_adverts.total_price, precision: 0) %> [all]</div>
        </div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data stats_tab_03">
      <div class="data_content">
        <div class="header"> live adverts [mth]</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-newspaper-o" aria-hidden="true"></i></span>
          <span><%= @businessads.live_adverts.open_adverts.live_this_month.count %></span>
        </div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data stats_tab_04">
      <div class="data_content">
        <div class="header"> total live adverts [ads.]</div>
        <div class="header_data">
          <span class="header_icon"><i class="fa fa-newspaper-o" aria-hidden="true"></i></span>
          <span><%= @businessads.adverts.live_adverts.open_adverts.count %></span>
          <div class="minor_info">£<%= number_with_precision(@businessads.adverts.live_adverts.open_adverts.total_price, precision: 0) %> [all]</div>
        </div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data stats_tab_05">
      <div class="data_content">
        <div class="header"> total live adverts [part.]</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-newspaper-o" aria-hidden="true"></i></span>
          <span><%= @businessads.partnership.live_adverts.open_adverts.count %></span>
          <div class="minor_info">£<%= number_with_precision(@businessads.partnership.live_adverts.open_adverts.total_price, precision: 0) %> [all]</div>
        </div>
      </div>
    </div>
    <div class="medium-2 columns right_data responsive_data stats_tab_06">
      <div class="data_content">
        <div class="header"> total live adverts [spon.]</div>
        <div class="header_data">
          <span class="header_icon"><i class="fa fa-newspaper-o" aria-hidden="true"></i>
          </span><span><%= @businessads.sponsorship.live_adverts.open_adverts.count %></span>
          <div class="minor_info">£<%= number_with_precision(@businessads.sponsorship.live_adverts.open_adverts.total_price, precision: 0) %> [all]</div>
        </div>
      </div>
    </div>
  </div>
  <div class="clear"></div>

  <!-- table_data_content -->
  <div class="medium-12 columns lower_data_content stats_tab_01_content">
