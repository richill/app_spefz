<div class="user_dashboard_admin_reports">
  <!-- upper_data_content -->
  <div class="medium-12 columns upper_data_content" style="margin-bottom:0px;">
    <div class="medium-2 columns left_data responsive_data stats_tab_01">
      <div class="data_content">
        <div class="header"> total reports</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-rss" aria-hidden="true"></i></span><span><%= @reports.all.count %></span></div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data stats_tab_02">
      <div class="data_content">
        <div class="header"> reported users</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-rss" aria-hidden="true"></i></span>
          <span><%= @reports.report_users.count %></span>
        </div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data stats_tab_03">
      <div class="data_content">
        <div class="header"> reported socials</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-rss" aria-hidden="true"></i></span><span><%= @reports.report_socials.count %></span></div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data stats_tab_04">
      <div class="data_content">
        <div class="header"> reported events</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-rss" aria-hidden="true"></i></span><span><%= @reports.report_events.count %></span></div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data stats_tab_05">
      <div class="data_content">
        <div class="header"> inappropriate content</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-rss" aria-hidden="true"></i></span>
          <span><%= @reports.inappropriate_content.count %></span>
        </div>
      </div>
    </div>
    <div class="medium-2 columns right_data responsive_data stats_tab_06">
      <div class="data_content">
        <div class="header"> spam / Commercial</div>
        <div class="header_data">
          <span class="header_icon"><i class="fa fa-rss" aria-hidden="true"></i></span><span><%= @reports.spam_commercial.count %></span>
        </div>
      </div>
    </div>
  </div>
  <div class="clear"></div>

