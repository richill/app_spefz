<div class="user_dashboard_admin_statsevents">
  <!-- upper_data_content -->
  <div class="medium-12 columns upper_data_content">
    <div class="medium-2 columns left_data responsive_data stats_tab_01">
      <div class="data_content">
        <div class="header"> total events</div>
        <div class="header_data">
          <span class="header_icon"><i class="fa fa-calendar" aria-hidden="true"></i></span>
          <span><%= @events.all.count %></span>
          <% if current_user.admin_pa_management_group %>
            <div class="minor_info">£<%= @events.total_price_for_events %> [all]</div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data stats_tab_02">
      <div class="data_content">
        <div class="header"> total active events</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-calendar-check-o" aria-hidden="true"></i></span>
          <span><%= @events.live_events.open_events.count %></span>
          <% if current_user.admin_pa_management_group %>
            <div class="minor_info">£<%= @events.live_events.open_events.total_price_for_events %> [all]</div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data stats_tab_03">
      <div class="data_content">
        <div class="header"> total active events [mth]</div>
        <div class="header_data">
          <span class="header_icon"><i class="fa fa-calendar-check-o" aria-hidden="true"></i></span>
          <span><%= @events.held_this_month.live_events.open_events.count %></span>
          <% if current_user.admin_pa_management_group %>
            <div class="minor_info">£<%= @events.held_this_month.live_events.open_events.total_price_for_events %> [mth]</div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data stats_tab_04">
      <div class="data_content">
        <div class="header"> total closed events</div>
        <div class="header_data">
          <span class="header_icon"><i class="fa fa-calendar-times-o" aria-hidden="true"></i></span>
          <span><%= @events.expired_or_closed_events.count %></span>
          <% if current_user.admin_pa_management_group %>
            <div class="minor_info">£<%= @events.expired_or_closed_events.total_price_for_events %> [all]</div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data stats_tab_05">
      <div class="data_content">
        <div class="header"> total unbooked live events</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-calendar-times-o" aria-hidden="true"></i></span>
          <span><%= @events.unbooked_events.live_events.open_events.count %></span>
        </div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data hide">
      <div class="data_content">
        <div class="header"> avg ratings - all events</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-star" aria-hidden="true"></i></span>
          <span><%= @events.overall_ratings_with_zero_ratings %></span>
          <% if current_user.admin_pa_management_group %>
            <div class="minor_info"><%= @events.overall_ratings_with_zero_ratings_count %> [events]</div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="medium-2 columns right_data responsive_data stats_tab_06">
      <div class="data_content">
        <div class="header"> avg ratings - rated events</div>
        <div class="header_data">
          <span class="header_icon"><i class="fa fa-star" aria-hidden="true"></i></span>
          <span><%= @events.overall_ratings_without_zero_ratings %></span>
          <% if current_user.admin_pa_management_group %>
            <div class="minor_info"><%= @events.overall_ratings_without_zero_ratings_count %> [events]</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>


  <div class="clear"></div>

  <!-- table_data_content -->
  <div class="medium-12 columns lower_data_content hide">
    <div class="medium-12 columns lower_data_inner_content">
      <h1>stats events info</h1>
      <ul>
        <li>0.] groups - number of events under each group</li>
        <li>eg: Family & Education | # of events: 4 | # of users attending: 20 | Male: #12 #Female:8 | total money in: £3'000</li>
      </ul>
    </div>
  </div>

  <div class="medium-12 columns lower_data_content stats_tab_01_content">
    <div class="medium-12 columns lower_data_inner_content">
      <%= render 'users/shared/data_info_statsevents_events' %>
    </div>
  </div>

  <div class="medium-12 columns lower_data_content stats_tab_02_content hide">
    <div class="medium-12 columns lower_data_inner_content">
      <%= render 'users/shared/data_info_statsevents_activeevents' %>
    </div>
  </div>

  <div class="medium-12 columns lower_data_content stats_tab_03_content hide">
    <div class="medium-12 columns lower_data_inner_content">
      <%= render 'users/shared/data_info_statsevents_activeevents_held_this_mth' %>
    </div>
  </div>

  <div class="medium-12 columns lower_data_content stats_tab_04_content hide">
    <div class="medium-12 columns lower_data_inner_content">
      <%= render 'users/shared/data_info_statsevents_closedevents' %>
    </div>
  </div>

  <div class="medium-12 columns lower_data_content stats_tab_05_content hide">
    <div class="medium-12 columns lower_data_inner_content">
      <%= render 'users/shared/data_info_statsevents_unbookedevents' %>
    </div>
  </div>

   <div class="medium-12 columns lower_data_content stats_tab_06_content hide">
    <div class="medium-12 columns lower_data_inner_content">
      <%= render 'users/shared/data_info_statsevents_ratingsevents' %>
    </div>
  </div>
  <div class="clear"></div>
</div>

