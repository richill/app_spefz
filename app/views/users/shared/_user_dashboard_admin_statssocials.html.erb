<div class="user_dashboard_admin_statssocials">
  <!-- upper_data_content -->
  <div class="medium-12 columns upper_data_content">
    <div class="medium-2 columns left_data responsive_data stats_tab_01">
      <div class="data_content">
        <div class="header"> total socials</div>
        <div class="header_data">
          <span class="header_icon"><i class="fa fa-calendar" aria-hidden="true"></i></span>
          <span><%= @socials.all.count %></span>
        </div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data stats_tab_02">
      <div class="data_content">
        <div class="header"> total active socials</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-calendar-check-o" aria-hidden="true"></i></span>
          <span><%= @socials.live_socials.open_socials.count %></span>
        </div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data stats_tab_03">
      <div class="data_content">
        <div class="header"> total active socials [mth]</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-calendar-check-o" aria-hidden="true"></i></span><span><%= @socials.held_this_month.count %></span></div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data stats_tab_04">
      <div class="data_content">
        <div class="header"> total closed socials</div>
        <div class="header_data">
          <span class="header_icon"><i class="fa fa-calendar-times-o" aria-hidden="true"></i></span>
          <span><%= @socials.expired_or_closed_socials.count %></span>
        </div>
      </div>
    </div>
    <div class="medium-2 columns middle_data responsive_data stats_tab_05">
      <div class="data_content">
        <div class="header"> total host [users]</div>
        <div class="header_data"><span class="header_icon"><i class="fa fa-users" aria-hidden="true"></i></span>
          <span><%= @users.hosts_client_users_with_active_socials.count %></span>
        </div>
      </div>
    </div>
    <div class="medium-2 columns right_data responsive_data stats_tab_06">
      <div class="data_content">
        <div class="header"> total host [spefz]</div>
        <div class="header_data">
          <span class="header_icon"><i class="fa fa-users" aria-hidden="true"></i></span><span><%= @users.hosts_spefz_team_active_socials.count %></span>
        </div>
      </div>
    </div>
  </div>


  <div class="clear"></div>

  <!-- table_data_content -->
  <div class="medium-12 columns lower_data_content">
    <div class="medium-12 columns lower_data_inner_content">
      <h1>stats socials info</h1>
      <ul>
        <li>0.] groups - number of socials under each group</li>
        <li>eg: Family & Education | # of socials: 4 | # of users attending: 20 | Male: #12 #Female:8 | total money in: Â£3'000</li>
      </ul>
    </div>
  </div>


  <div class="medium-12 columns lower_data_content stats_tab_01_content">
    <div class="medium-12 columns lower_data_inner_content">
      <%= render 'users/shared/data_info_statssocials_socials' %>
    </div>
  </div>

  <div class="medium-12 columns lower_data_content stats_tab_02_content hide">
    <div class="medium-12 columns lower_data_inner_content">
      <%= render 'users/shared/data_info_statssocials_activesocials' %>
    </div>
  </div>

  <div class="medium-12 columns lower_data_content stats_tab_03_content hide">
    <div class="medium-12 columns lower_data_inner_content">
      <%= render 'users/shared/data_info_statssocials_activesocials_held_this_mth' %>
    </div>
  </div>

  <div class="medium-12 columns lower_data_content stats_tab_04_content hide">
    <div class="medium-12 columns lower_data_inner_content">
      <%= render 'users/shared/data_info_statssocials_closedsocials' %>
    </div>
  </div>

  <div class="medium-12 columns lower_data_content stats_tab_05_content hide">
    <div class="medium-12 columns lower_data_inner_content">
      <%= render 'users/shared/data_info_statssocials_hosts_users' %>
    </div>
  </div>

   <div class="medium-12 columns lower_data_content stats_tab_06_content hide">
    <div class="medium-12 columns lower_data_inner_content">
      <%= render 'users/shared/data_info_statssocials_hosts_spefz' %>
    </div>
  </div>
  <div class="clear"></div>
</div>

