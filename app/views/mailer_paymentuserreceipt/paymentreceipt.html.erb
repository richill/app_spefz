<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Spefz Receipt</title>
<style type="text/css">
@media(max-width:480px){
  table[class=main_table],table[class=layout_table]{width:300px !important;}
  table[class=layout_table] tbody tr td.header_image img{width:300px !important;height:auto !important;}
}
a{color:#37aadc}
</style>
</head>
<body>
<table border="0" cellpadding="0" cellspacing="0" width="100%">
<tbody>
<tr>
<td align="center" valign="top">
<!--  M A I N T A B L E  S T A R T  -->
<table border="0" cellpadding="0" cellspacing="0" class="main_table" width="600">
    <tbody>
    <tr>
    <td>
      <!--  L A Y O U T _ T A B L E  S T A R T  -->
    <table border="0" cellpadding="0" cellspacing="0" class="layout_table" style="border-collapse:collapse;border:1px solid #CCCCCC;" width="100%" >
      <tbody>
      <!--  H E A D E R R O W  S T A R T  -->
      <tr>
      <td align="left" class="header_image"><img height="120" src="http://res.cloudinary.com/africanjober/image/upload/v1484406305/Spefz_email_template_top_design_wpdgcj.png" width="600" style="border:0;display:block;"></td>
      </tr>
      <tr>
      <td align="left" class="header_image"><img height="120" src="http://res.cloudinary.com/africanjober/image/upload/v1484408684/Spefz_email_template_top_img_text_design_ymi7ae.png" width="600" style="border:0;display:block;"></td>
      </tr>
      <!--  H E A D E R R O W  E N D  -->
      <tr><td style="font-size:13px;line-height:13px;margin:0;padding:0;">&nbsp;</td></tr>
      <!--  B O D Y R O W  S T A R T  -->
      <tr>
      <td align="center" valign="top">
        <table align="center" border="0" cellpadding="0" cellspacing="0" width="85%">
          <tbody>
          <tr>
          <td align="left">
              
            <p style="font-family:Arial, Helvetica, sans-serif;font-size:14px;line-height:22px;font-weight:bold;">
              Dear <span style="text-transform:capitalize;"><%= @payment.user.firstname %></span>,
            </p>
            
            <% if @payment.subscription_id? %>
              <!-- subscription_id -->
              <p style="font-family:Arial, Helvetica, sans-serif;font-size:12px;line-height:22px;background-color:#F9F9F9;padding:15px;text-align:center;">
                  Thank you for your monthly subscription with Spefz Ltd.
              </p>
              <div style="font-family:Arial, Helvetica, sans-serif;font-size:12px;background-color:#F9F9F9;padding:15px 15px 5px 15px;"><span style="font-weight:bold;">Subscription Ref:</span> <%= @payment.reference %></div>
              <div style="font-family:Arial, Helvetica, sans-serif;font-size:12px;background-color:#F9F9F9;padding:0px 15px 5px 15px"><span style="font-weight:bold;">Generated at:</span> <%= @payment.created_at.strftime("%a, %d %b %Y") %></div>
              <div style="font-family:Arial, Helvetica, sans-serif;font-size:12px;background-color:#F9F9F9;padding:0px 15px 15px 15px;"><span style="font-weight:bold;">Monthly Subscription value:</span> £<%= number_with_precision(@payment.subscription.price, precision: 2) %>/mth</div>
              
              <p style="font-family:Arial, Helvetica, sans-serif;font-size:12px;line-height:22px;background-color:#F9F9F9;padding:15px;height:80px;">
                <% if @payment.user.image.present? %>
                  <%= cl_image_tag(@payment.user.image, :transformation=>[{:gravity=>"face", :width=>80, :height=>80, :crop=>"fill", :radius=>"max", style: "border:0;display:block;border-radius:200px;float:left; margin-right:10px;"}]) %>
                <% else %>
                  <%= image_tag("img-profile-image-default.png", style: "height:80px;width:80px;border:0;display:block;border-radius:200px;float:left;margin-right:10px;") %>
                <% end %>
                <span style="font-size:25px;margin-top:12px;display:inline-block;text-transform:capitalize;"><%= "#{@payment.user.firstname} #{@payment.user.lastname}" %></span><br/>
                <span style="text-transform:capitalize;margin-left:2px;">welcome on board!</span><br/>
                <span style="margin-left:2px;">Complete your ptofile <span style="text-transform:capitalize;"><%= "#{@payment.user.firstname}" %></span> <span style="margin: 0px 5px 0px 5px;">|</span> <%= link_to "view profile", user_path(@payment.user), {style: "font-family:Arial, Helvetica, sans-serif;color:#b6584f;font-size:12px"} %></span>
              </p>
              <!-- subscription_id -->

            <% elsif @payment.event_id? %>
              <!-- event_id -->
              <p style="font-family:Arial, Helvetica, sans-serif;font-size:12px;line-height:22px;background-color:#F9F9F9;padding:15px;text-align:center;">
                  Thank you for your purchase with Spefz Ltd.
              </p>
              <div style="font-family:Arial, Helvetica, sans-serif;font-size:12px;background-color:#F9F9F9;padding:15px 15px 5px 15px;"><span style="font-weight:bold;">Purchase Transaction Ref:</span> <%= @payment.reference %></div>
              <div style="font-family:Arial, Helvetica, sans-serif;font-size:12px;background-color:#F9F9F9;padding:0px 15px 5px 15px"><span style="font-weight:bold;">Generated at:</span> <%= @payment.created_at.strftime("%a, %d %b %Y") %></div>
              <div style="font-family:Arial, Helvetica, sans-serif;font-size:12px;background-color:#F9F9F9;padding:0px 15px 15px 15px;"><span style="font-weight:bold;">Sale value:</span> £<%= number_with_precision(@payment.event.price, precision: 2) %></div>

              <p style="font-family:Arial, Helvetica, sans-serif;font-size:12px;line-height:22px;background-color:#F9F9F9;padding:15px;height:80px;">
                <% if @payment.event.image.present? %>
                  <%= cl_image_tag(@payment.event.image, :transformation=>[{:gravity=>"face", :width=>80, :height=>130, :crop=>"fill", style: "border:0;display:block;border-radius:0px;float:left; margin-right:10px;"}]) %>
                <% else %>
                  <%= image_tag("img-profile-image-default.png", style: "height:80px;width:130px;border:0;display:block;border-radius:0px;float:left;margin-right:10px;") %>
                <% end %>
                <span style="font-size:16px;margin-top:8px;display:inline-block;text-transform:capitalize;"><%= truncate "#{@payment.event.title}", length: 35 %></span><br/>
                <span style="text-transform:capitalize;margin-left:2px;"><%= @payment.event.date.strftime("%a, %d %b %Y") %> <span style="margin: 0px 5px 0px 5px;">|</span> <%= @payment.event.time.strftime("%I:%M %p") %></span><br/>
                <span style="margin-left:2px;">Find out more about the event <span style="margin: 0px 5px 0px 5px;">|</span> <%= link_to "view", event_path(@payment.event), {style: "font-family:Arial, Helvetica, sans-serif;color:#b6584f;font-size:12px"} %></span>
              </p>

              <p style="font-family:Arial, Helvetica, sans-serif;font-size:12px;line-height:22px;background-color:#F9F9F9;padding:15px;">
                <span style="font-weight:bold;text-transform:capitalize;">location</span><br/>
                <span>100-110 Euston Road, NW1 2AJ<%= @payment.event.address %>, <%= @payment.event.postcode %>, </span>
                <span style="text-transform:capitalize;"><%= @payment.event.city %>, <%= @payment.event.category_country.name %></span>
              </p>
              <!-- event_id -->
            <% end %>
            
            <p style="font-family:Arial, Helvetica, sans-serif;font-size:12px;line-height:22px;margin-top:20px;">
              <div style="font-family:Arial, Helvetica, sans-serif;font-size:12px;">Regards,</div>
              <div style="font-family:Arial, Helvetica, sans-serif;font-size:12px;">The <a href="https://www.spefz.com/" style="font-family:Arial, Helvetica, sans-serif;color:#b6584f">Spefz.com</a> Team</div>
            </p>
          </td>
          </tr>
          </tbody>
        </table>
      </td>
      </tr>
      <!--  B O D Y R O W  E N D  -->
      <tr><td style="font-size:13px;line-height:13px;margin:0;padding:0;">&nbsp;</td></tr>
      <!--  F O O T E R R O W  S T A R T  -->
      <tr>
      <td align="left" class="header_image"><a href="https://www.africanjober.com/"><img height="67" src="http://res.cloudinary.com/africanjober/image/upload/v1484406312/Spefz_email_template_bottom_design_p64tj3.png" width="600" style="border:0;display:block;" alt="Sent via SparkPost"></a></td>
      </tr>
      <!--  F O O T E R R O W  E N D  -->
      </tbody>
    </table>
    <!--  L A Y O U T _ T A B L E  E N D  -->
    </td>
    </tr>
    </tbody>
</table>
<!--  M A I N _ T A B L E  E N D  -->
</td>
</tr>
</tbody>
</table>
</body>
</html>