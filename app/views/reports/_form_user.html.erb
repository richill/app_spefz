<%= simple_form_for(@report) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :category_report, collection: CategoryReport.all, prompt: "please choose", label: 'Report this member' %>
    <div class="error_msg">can't be blank</div>

    <%= f.input :content %>
    <div class="error_msg">can't be blank</div>
    
    <!-- hidden_field -->
    <%= f.hidden_field :social_id %>
    <%= f.hidden_field :event_id %>
    <%= f.hidden_field :user_id, value: user.id %>
    <!-- hidden_field -->
  </div>

  <div class="form-actions report_button">
    <%= f.button :submit, "Send" %>
  </div>
<% end %>
