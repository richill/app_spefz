<%= simple_form_for(@report) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :category_report, collection: CategoryReport.all, prompt: "select a category" %>
    <%# f.input :category_report_id %>
    <%= f.input :content %>
    <%= f.hidden_field :event_id %>
    <%= f.hidden_field :social_id %>
    <%= f.hidden_field :user_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send" %>
  </div>
<% end %>
